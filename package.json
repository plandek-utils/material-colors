{
  "name": "@plandek-utils/material-colors",
  "version": "1.0.0",
  "author": "Eduardo Turi√±o <eturino@plandek.com>",
  "description": "Colors to use in Plandek projects, based on Material-UI",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/plandek-utils/material-colors",
  "homepage": "https://github.com/plandek-utils/material-colors",
  "bugs": "https://github.com/plandek-utils/material-colors/issues",
  "license": "MIT",
  "keywords": [],
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "prepare": "install-peers && husky install",
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:eslint": "eslint \"src/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "test": "run-s build test:* type-check",
    "test:eslint": "eslint \"src/**/*.ts\"",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest --coverage --config=\"jest.config.js\"",
    "cov": "run-s build cov:html && open-cli coverage/index.html",
    "cov:html": "jest --coverage --config=\"jest.html.config.js\"",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc --theme default src/index.ts --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/index.ts --exclude **/*.spec.ts --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset": "git clean -dfx -e .idea && git reset --hard && yarn install && install-peers -f",
    "clean": "trash build test",
    "prepare-release": "run-s reset test doc:html version doc:publish"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files (except `.idea`) and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=10.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@commitlint/cli": "^18.1.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "gh-pages": "^6.0.0",
    "github-release-from-changelog": "^2.1.1",
    "husky": "^8.0.1",
    "install-peers-cli": "^2.2.0",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.0.0",
    "replace-in-file": "^7.0.1",
    "standard-version": "^9.5.0",
    "strip-json-comments": "^5.0.0",
    "trash-cli": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
